<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%= title %>
    </title>
    <link href="../stylesheets/style.css" rel="stylesheet" type="text/css">
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="../javascripts/validation.js"></script>
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <div>
        <% if (typeof register_fail_msg !== 'undefined' && register_fail_msg.length > 0){ %>
            <div class="alert__fail">
                <%= register_fail_msg %>
            </div>
            <% } %>
    </div>
    <div id="index_form">
        <form method="POST" id="register" action="/register" onsubmit=validate(this)>
            <p>Set Username</p>
            <input type="text" name="username" id="usr" placeholder="Username">
            <div id="username_error"></div>
            <p>Set Password</p>
            <input type="password" name="password" id="pwd" placeholder="Password">
            <div id="password_error"></div>
            <input type="submit" value="Register">
        </form>
        <br>
        <div class="button">
            <label>Want to verify a message?</label>
            <a href="/verify">
                <button>Click Here</button>
            </a>
        </div>
        <script>
            function clearText() {
                for (var i = 10; i >= 0; i--) {
                    if (i == 1) {
                        $('div.alert__fail').fadeOut();
                        $('div.alert__success').fadeOut();
                    }
                }
            }
            window.setTimeout(() => {
                clearText();
            }, 1000);
        </script>
</body>

</html>